			$(this).tab('show'); // Hiển thị tab-pane tương ứng với tab link được chọn
		});

		const inputName = document.getElementById('inputName');
		const editBtn = document.getElementById('edit');
		const saveBtn = document.getElementById('save');
		const cancelBtn = document.getElementById('cancel');

		// Bắt sự kiện click trên nút "Chỉnh sửa"
		editBtn.addEventListener('click', function () {
			inputName.disabled = false;
			editBtn.style.display = 'none'; // Ẩn nút "Chỉnh sửa"
			saveBtn.style.display = 'inline-block'; // Hiện nút "Lưu"
			cancelBtn.style.display = 'inline-block'; // Hiện nút "Hủy"
		});

		saveBtn.addEventListener('click', function () {
			inputName.disabled = true;
			editBtn.style.display = 'inline-block'; // Hiện lại nút "Chỉnh sửa"
			saveBtn.style.display = 'none'; // Ẩn nút "Lưu"
			cancelBtn.style.display = 'none'; // Ẩn nút "Hủy"
		});

		// Bắt sự kiện click trên nút "Hủy"
		cancelBtn.addEventListener('click', function () {
			inputName.disabled = true;
			editBtn.style.display = 'inline-block'; // Hiện lại nút "Chỉnh sửa"
			saveBtn.style.display = 'none'; // Ẩn nút "Lưu"
			cancelBtn.style.display = 'none'; // Ẩn nút "Hủy"
		});
	</script>