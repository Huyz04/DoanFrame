<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_DOAN.styles.css" asp-append-version="true" />
    <!-- title -->
    <title>Comestic</title>
    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="assets/img/favicon.png" />
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,700&display=swap"
          rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <!-- fontawesome -->
    <link rel="stylesheet" href="~/assets/css/all.min.css" asp-append-version="true" />
    <!-- owl carousel -->
    <link rel="stylesheet" href="~/assets/css/owl.carousel.css" asp-append-version="true" />
    <!-- magnific popup -->
    <link rel="stylesheet" href="~/assets/css/magnific-popup.css" asp-append-version="true" />
    <!-- animate css -->
    <link rel="stylesheet" href="~/assets/css/animate.css" asp-append-version="true" />
    <!-- mean menu css -->
    <link rel="stylesheet" href="~/assets/css/meanmenu.min.css" asp-append-version="true" />
    <!-- main style -->
    <link rel="stylesheet" href="~/assets/css/main.css" asp-append-version="true" />
    <!-- responsive -->
    <link rel="stylesheet" href="~/assets/css/responsive.css" asp-append-version="true" />
</head>
<body >
    <div>
        <div class="top-header-area" id="sticker">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-sm-12 text-center">
                        <div class="main-menu-wrap">
                            <!-- logo -->
                            <div class="site-logo">
                                <a asp-area="" asp-controller="Home" asp-action="Index">
                                    <img src="assets/img/logo.png" alt="" />
                                </a>
                            </div>
                            <!-- logo -->
                            <!-- menu start -->
                            <nav class="main-menu">
                                <ul>
                                    <li class="@((ViewContext.RouteData.Values["controller"].ToString() == "Home") ? "current-list-item" : "")">
                                        <a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
                                    </li>
                                    <li class="@((ViewContext.RouteData.Values["controller"].ToString() == "SanPham") ? "current-list-item" : "")">
                                        <a asp-area="" asp-controller="SanPham" asp-action="Index">Sản phẩm</a>
                                        </li>
                                    <li class="@((ViewContext.RouteData.Values["controller"].ToString() == "User") ? "current-list-item" : "")">
                                        <a asp-area="" asp-controller="User" asp-action="Index">User</a>
                                        </li>
                                    <li class="@((ViewContext.RouteData.Values["controller"].ToString() == "LoaiSanPham") ? "current-list-item" : "")">
                                        <a asp-area="" asp-controller="LoaiSanPham" asp-action="Index">Loại Sản phẩm</a>
                                        </li>
                                    <li>
                                        <a href="news.html">Cẩm nang</a>
                                    </li>
                                    <li class="@((ViewContext.RouteData.Values["controller"].ToString() == "Add") ? "current-list-item" : "")">
                                        <a asp-area="" asp-controller="Add" asp-action="Index">Liên hệ</a></li>
                                    <li>
                                        <a href="shop.html">Đơn hàng của bạn</a>
                                        <ul class="sub-menu">
                                            <li><a href="shop.html">Shop</a></li>
                                            <li><a href="checkout.html">Check Out</a></li>
                                            <li><a href="single-product.html">Single Product</a></li>
                                            <li><a href="cart.html">Cart</a></li>
                                        </ul>
                                    </li>
                                    <li>
                                        <div class="header-icons">
                                            <a class="shopping-cart" href="cart.html">
                                                <i class="fas fa-shopping-cart"></i>
                                            </a>
                                            <a class="mobile-hide search-bar-icon" href="#">
                                                <i class="fas fa-search"></i>
                                            </a>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <a asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                                <a asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                            }
                                            else
                                            {
                                                <a asp-area="" asp-controller="Account" asp-action="Login" onclick="hideLayout()">Login</a>
                                                <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                                            }

                                        </div>
                                    </li>
                                </ul>
                            </nav>
                            <a class="mobile-show search-bar-icon" href="#">
                                <i class="fas fa-search"></i>
                            </a>
                            <div class="mobile-menu"></div>
                            <!-- menu end -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- search area -->
    <div class="search-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <span class="close-btn"><i class="fas fa-window-close"></i></span>
                    <div class="search-bar">
                        <div class="search-bar-tablecell">
                            <h3>Search For:</h3>
                            <input type="text" placeholder="Keywords" />
                            <button type="submit">
                                Search <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @RenderBody()
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- jquery -->
    <script src="~/assets/js/jquery-1.11.3.min.js"></script>
    <!-- bootstrap -->
    <script src="~/assets/bootstrap/js/bootstrap.min.js"></script>
    <!-- count down -->
    <script src="~/assets/js/jquery.countdown.js"></script>
    <!-- isotope -->
    <script src="~/assets/js/jquery.isotope-3.0.6.min.js"></script>
    <!-- waypoints -->
    <script src="~/assets/js/waypoints.js"></script>
    <!-- owl carousel -->
    <script src="~/assets/js/owl.carousel.min.js"></script>
    <!-- magnific popup -->
    <script src="~/assets/js/jquery.magnific-popup.min.js"></script>
    <!-- mean menu -->
    <script src="~/assets/js/jquery.meanmenu.min.js"></script>
    <!-- sticker js -->
    <script src="~/assets/js/sticker.js"></script>
    <!-- main js -->
    <script src="~/assets/js/main.js"></script>
</body>
</html>
