@model SanPhamVM
@{
	ViewData["Title"] = "San Pham";
	Layout = null;
}

<!-- products -->
<div @* class="product-section mt-150 mb-150" *@>

		<div class="row product-lists">
			@foreach (var item in Model.sanphamVM)
			{
				<div class="col-lg-4 col-md-6 text-center strawberry">
					<div class="single-product-item">
						<div class="product-image">
							<a href="single-product.html"><img src="@item.Img" alt=""></a>
						</div>
						<h3>@item.Tensp</h3>
						<p class="product-price">@item.Dongia<span>VND</span></p>
						<a href="cart.html" class="cart-btn"><i class="fas fa-shopping-cart"></i>Thêm vào giỏ</a>
					</div>
				</div>
			}


			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="pagination-wrap">
						<ul>
							<li><a href="#">Prev</a></li>
							<li><a href="#">1</a></li>
							<li><a class="active" href="#">2</a></li>
							<li><a href="#">3</a></li>
							<li><a href="#">Next</a></li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end products -->
