@using Microsoft.AspNetCore.Identity;

@model MVC_DOAN.ViewModels.DashboardVM

<h1 class="display-4 fw-normal">User Dashboard</h1>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="LoaiSanPham" asp-action="Create">Create Loai San Pham</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="SanPham" asp-action="Create">Create San Pham</a>
<a type="button" class="btn btn-primary" asp-area="" asp-controller="Dashboard" asp-action="EditUserProfile">Edit User Profile</a>
<div class="album py-5 bg-light">
    <div class="container">
        <h2 class="display-4 fw-normal">Loai San Pham</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Loaisanphams)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                         <div class="card-body">
                            <p class="card-text">@item.Tenlsp</p>
                            <p class="card-text">@item.Tinhtrang</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="LoaiSanPham" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>
                                    
                                        <a asp-controller="LoaiSanPham" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="LoaiSanPham" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <h2 class="display-4 fw-normal">San Pham</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (var item in Model.Sanphams)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <img class="card-img-top" src="@item.Img" width="100%" height="225" alt="Card image cap">
                            <p class="card-text">@item.Tensp</p>
                            <p class="card-text">@item.Dongia</p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="btn btn-success" asp-controller="LoaiSanPham" asp-action="Detail" asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-secondary">View</a>

                                    <a asp-controller="LoaiSanPham" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    <a asp-controller="LoaiSanPham" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Delete</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>